#!/bin/bash

# Minimal test for skim in floating pane

echo "Testing skim in floating pane environment..."
echo "PWD: $(pwd)"
echo "TERM: $TERM"
echo "TTY: $(tty 2>/dev/null || echo 'No TTY')"

# Set terminal environment
export TERM="xterm"
unset TERMINFO
export COLORTERM=""

echo "After env setup:"
echo "TERM: $TERM"

# Test if skim works with simple input
echo "Testing skim with simple list..."
echo -e "file1.md\nfile2.md\nfile3.md" | sk --header="Test skim" || echo "Skim failed with exit code: $?"

echo "Test completed."
sleep 2
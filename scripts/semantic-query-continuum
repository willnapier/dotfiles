#!/bin/bash
"""Semantic search wrapper for continuum conversation logs"""

# Activate the semantic search virtualenv and run the query
SEMANTIC_SEARCH_DIR="$HOME/.local/share/semantic-search"
CONFIG_PATH="$HOME/.local/share/semantic-search-continuum/config.yaml"

# Check if config argument already provided
if [[ "$*" == *"--config"* ]]; then
    exec "$SEMANTIC_SEARCH_DIR/venv/bin/python3" "$SEMANTIC_SEARCH_DIR/semantic_query.py" "$@"
else
    exec "$SEMANTIC_SEARCH_DIR/venv/bin/python3" "$SEMANTIC_SEARCH_DIR/semantic_query.py" --config "$CONFIG_PATH" "$@"
fi

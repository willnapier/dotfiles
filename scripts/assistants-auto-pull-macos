#!/opt/homebrew/bin/nu
# Assistants Auto-Pull Watcher for macOS - Automatically pulls remote changes from GitHub
# Monitors GitHub for remote changes to ~/Assistants and pulls them automatically

def main [] {
    let assistants_dir = $"($env.HOME)/Assistants"
    let log_file = $"($env.HOME)/.local/share/assistants-auto-pull.log"
    let lock_file = "/tmp/assistants-auto-pull.lock"

    # Ensure log directory exists
    mkdir ($log_file | path dirname)

    # Smart lock file handling with stale lock detection
    if ($lock_file | path exists) {
        let lock_age = ((date now) - (ls $lock_file | get 0.modified))
        let age_minutes = ($lock_age / 1min)

        if $age_minutes > 10 {
            let timestamp = (date now | format date "%H:%M:%S")
            let cleanup_msg = $"[($timestamp)] Cleaning up stale lock file"
            $cleanup_msg | save --append $log_file
            print $cleanup_msg
            rm -f $lock_file
        } else {
            print "âŒ Assistants auto-pull already running (recent lock file)"
            exit 1
        }
    }

    # Create lock file
    "running" | save --force $lock_file

    print "ğŸš€ Starting Assistants auto-pull watcher (macOS)"
    print $"ğŸ‘€ Watching: ($assistants_dir)"
    print $"ğŸ“ Logging to: ($log_file)"

    # Check for remote changes every 2 minutes
    loop {
        sleep 2min

        cd $assistants_dir

        # Fetch remote changes
        let fetch_result = (do { git fetch origin main } | complete)

        if $fetch_result.exit_code == 0 {
            # Check if we're behind remote
            let behind_result = (do { git rev-list --count HEAD..origin/main } | complete)

            if $behind_result.exit_code == 0 {
                let behind_count = ($behind_result.stdout | str trim | into int)

                if $behind_count > 0 {
                    let timestamp = (date now | format date "%H:%M:%S")
                    let message = $"[($timestamp)] ğŸ“¥ Assistants: Remote changes detected - ($behind_count) commits behind"
                    $message | save --append $log_file
                    print $message

                    # Pull changes
                    print "â¬‡ï¸ Pulling Assistants changes..."
                    let pull_result = (do { git pull origin main } | complete)

                    if $pull_result.exit_code == 0 {
                        let success_msg = $"[($timestamp)] âœ… Successfully pulled Assistants changes"
                        $success_msg | save --append $log_file
                        print "âœ… Assistants changes pulled successfully"
                    } else {
                        let error_msg = $"[($timestamp)] âŒ Pull failed: ($pull_result.stderr)"
                        $error_msg | save --append $log_file
                        print $"âŒ Pull failed: ($pull_result.stderr)"
                    }
                }
            }
        } else {
            let timestamp = (date now | format date "%H:%M:%S")
            let error_msg = $"[($timestamp)] âŒ Fetch failed: ($fetch_result.stderr)"
            $error_msg | save --append $log_file
            print $"âŒ Fetch failed: ($fetch_result.stderr)"
        }
    }

    # Cleanup on exit
    rm -f $lock_file
    print "ğŸ›‘ Assistants auto-pull watcher stopped"
}

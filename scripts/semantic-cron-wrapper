#!/usr/bin/env bash
# Cron wrapper for semantic search updates
# Ensures proper environment is loaded

# Load environment variables (API key, etc.)
if [[ -f "$HOME/.zshrc" ]]; then
    source "$HOME/.zshrc"
fi

# Set PATH for Homebrew and other tools
export PATH="/opt/homebrew/bin:/usr/local/bin:$PATH"

# Run the actual update
exec "$HOME/.local/bin/semantic-auto-update"
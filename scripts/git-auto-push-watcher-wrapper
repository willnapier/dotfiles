#!/home/will/.cargo/bin/nu
# Nushell wrapper for git-auto-push-watcher with fixed PATH
# Uses absolute path to nu to avoid PATH bootstrap issues

# Ensure critical paths are set for spawned processes
$env.PATH = ($env.PATH | split row (char esep) | prepend ["/home/will/.cargo/bin" "/home/will/.local/bin"] | uniq | str join (char esep))

# Execute the actual git-auto-push-watcher script
source /home/will/.local/bin/git-auto-push-watcher
// Desktop layout - optimized for 27" Mac Thunderbolt (1710Ã—1107px)
// Strategy: Dedicated daily note pane + balanced workspace
layout {
    default_tab_template {
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    
    tab name="workspace" focus=true {
        pane split_direction="vertical" {
            pane name="daily-note" {
                focus true
                size "35%"
                command "bash"
                args "-c" "/Users/williamnapier/.local/bin/daily-note && exec hx \"$(daily-note --print-path)\" || exec /opt/homebrew/bin/nu"
            }
            pane split_direction="horizontal" {
                pane name="main-work" {
                    size "60%"
                }
                pane name="auxiliary" {
                    size "40%"
                }
            }
        }
    }
}
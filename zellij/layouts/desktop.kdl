// Desktop layout - optimized for 32" Dell 6K (6016×3384px)
// Strategy: Dedicated daily note quadrant + full 4-pane workspace
layout {
    default_tab_template {
        // Removed tab-bar plugin to eliminate duplicate mode indicators
        // Mode information is still available in the comprehensive status-bar below
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    
    tab name="workspace" focus=true {
        pane split_direction="vertical" {
            pane split_direction="horizontal" {
                pane name="daily-note" {
                    size "40%"
                    command "bash"
                    args "-c" "echo 'Daily Note Quadrant - Always visible\nPersistent across days\nRun: y → D for today'\''s note'; exec $SHELL"
                }
                pane name="main-editor" {
                    focus true
                    size "60%"
                }
            }
            pane split_direction="horizontal" {
                pane name="files-browser" {
                    size "40%"
                }
                pane name="auxiliary" {
                    size "60%"
                }
            }
        }
    }
}
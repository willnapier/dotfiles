layout {
    default_tab_template {
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    
    tab name="first" focus=true {
        pane {
            command "bash"
            args "-c" "echo 'First tab' && exec /opt/homebrew/bin/nu"
        }
    }
    
    tab name="second" {
        pane {
            command "bash" 
            args "-c" "echo 'Second tab' && exec /opt/homebrew/bin/nu"
        }
    }
}
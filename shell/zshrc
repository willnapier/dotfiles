# Clean minimal zsh config - NO RECURSION
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.cargo/bin:$PATH"
export EDITOR="hx"
export VISUAL="hx"

# Forge path for Zellij link picker
export FORGE="/Forge"

# Switch to Nushell for interactive use
if [[ $- == *i* ]] && command -v nu &> /dev/null; then
    exec nu
fi
export PATH="$HOME/.local/bin:$PATH"

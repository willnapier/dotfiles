# ⚠️  CLAUDE CODE: THIS FILE IS DOTTER-MANAGED - EDIT HERE IN DOTFILES, NOT ~/.config/ghostty/
# ⚠️  NEVER EDIT ~/.config/ghostty/config - IT'S A SYMLINK TO THIS FILE
# Ghostty Configuration with Solarized Themes
# Auto-switches between light/dark based on system appearance

# Font Configuration
font-family = JetBrains Mono
font-size = 14

# Window Settings
window-padding-x = 10
window-padding-y = 10
window-decoration = true
window-theme = auto

# Terminal Behavior
copy-on-select = true
confirm-close-surface = false
cursor-style = block
# cursor-style-blink = false  # TODO: Check if supported in Ghostty 1.2.3  # Disable blinking for better performance

# Shell Integration - Further reduced to fix Claude Code scrollback 
shell-integration = none

# Theme Settings - Auto-switch based on system appearance
theme = light:solarized-light,dark:solarized-dark

# Performance
gtk-single-instance = true

# macOS Specific
# macos-option-as-alt = true  # Removed - interferes with UK keyboard layout
macos-non-native-fullscreen = false

# Quick Actions
quick-terminal-position = bottom

# Scrollback Configuration
scrollback-limit = 10000
mouse-scroll-multiplier = 3
# alternate-screen-scroll = true  # TODO: Check if supported in Ghostty 1.2.3  # Keep scrollback active in chat UIs

# CRITICAL FIX FOR CLAUDE CODE SCROLLING
# Default is "keystroke,no-output" which breaks Claude Code scrolling
# Setting to empty disables auto-scroll completely
scroll-to-bottom =

# Mouse behavior for better Claude Code compatibility
mouse-hide-while-typing = false
mouse-shift-capture = false

# Disable Cmd+W on macOS to prevent accidental window closing
# Especially important in Claude Code where accidental close loses session
keybind = cmd+w=unbind

# Disable Ctrl+Z to prevent accidental process suspension
# Especially important in Claude Code where accidental suspension breaks flow
keybind = ctrl+z=unbind

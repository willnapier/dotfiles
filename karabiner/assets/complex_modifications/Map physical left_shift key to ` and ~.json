{
  "title": "Map physical left_shift key to ` and ~",
  "rules": [
    {
      "description": "Map physical left_shift key to ` and ~",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde"
            }
          ],
          "conditions": [
            {
              "type": "keyboard_type_if",
              "keyboard_types": ["ansi", "iso"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["shift"]
            }
          ],
          "conditions": [
            {
              "type": "keyboard_type_if",
              "keyboard_types": ["ansi", "iso"]
            }
          ]
        }
      ]
    }
  ]
}

{
	"title": "Spacebar to left_shift+left_control+left_option unless alone",
	"rules": [{
		"description": "Spacebar to Left_shift+left_control+left_option unless alone",
		"manipulators": [{
			"type": "basic",
			"from": {
				"key_code": "spacebar",
				"modifiers": {
					"optional": ["any"]
				}
			},
			"to": [{
				"key_code": "left_shift",
				"modifiers": ["left_option", "left_control"]
			}],
			"to_if_alone": [{
				"key_code": "spacebar"
			}],
			"parameters": {
				"basic.to_delayed_action_delay_milliseconds": 300,
				"basic.to_if_alone_timeout_milliseconds": 400
			},
			"conditions": [{
				"type": "device_unless",
				"identifiers": [{
					"vendor_id": 7504,
					"product_id": 24866
				}]
			}]
		}]
	}]
}
#!/usr/bin/env bash
# pre-rebase hook for dotfiles repo
# Prevents rebase when uncommitted changes exist

if ! git diff --quiet || ! git diff --cached --quiet; then
    echo ""
    echo "‚ùå UNCOMMITTED CHANGES DETECTED IN DOTFILES"
    echo ""
    echo "Commit or stash your changes before rebasing:"
    echo ""
    git status --short
    echo ""
    exit 1
fi

exit 0
